<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import App.DrawingArea?>
<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.Controller">
   <HBox prefHeight="13.0" prefWidth="500.0">
      <Label text="Charts:">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </HBox.margin>
         <font>
            <Font size="14.0"/>
         </font>
      </Label>
      <ComboBox fx:id="cmb" onAction="#draw" prefWidth="300.0" promptText="Choose a chart">
         <HBox.margin>
            <Insets bottom="10.0" right="10.0" top="10.0"/>
         </HBox.margin>
      </ComboBox>
      <Button fx:id="incBut" mnemonicParsing="false" text="+">
         <HBox.margin>
            <Insets bottom="10.0" left="50.0" right="10.0" top="10.0"/>
         </HBox.margin>
         <font>
            <Font size="16.0"/>
         </font>
      </Button>
      <Button fx:id="decBut" mnemonicParsing="false" text="-">
         <HBox.margin>
            <Insets bottom="10.0" top="10.0"/>
         </HBox.margin>
         <font>
            <Font name="System Bold" size="16.0"/>
         </font>
      </Button>
   </HBox>
   <DrawingArea fx:id="drawingArea" height="500" width="600">

   </DrawingArea>
</VBox>
